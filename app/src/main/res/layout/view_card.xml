<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/item">
        <android.support.design.card.MaterialCardView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            card_view:cardCornerRadius="65dp"
            card_view:strokeColor="@color/male"
            card_view:strokeWidth="1dp"
            android:id="@+id/dp_pane">
            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="130dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:id="@+id/dp"/>
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/glidepro"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </android.support.design.card.MaterialCardView>
        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/genderback"
            android:elevation="3dp"
            android:background="@drawable/male_back"
            android:layout_marginTop="-40dp"
            android:layout_below="@+id/dp_pane"
            android:layout_alignStart="@+id/dp_pane">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:id="@+id/gender"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/dp_pane"
            android:id="@+id/name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginStart="21dp"
            android:textSize="15sp"
            android:layout_toEndOf="@+id/dp_pane"
            android:layout_below="@+id/name"
            android:id="@+id/email"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="20dp"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/dp_pane"
            android:layout_alignParentBottom="true"
            android:id="@+id/age"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
